<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/result_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/result_username"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:id="@+id/result_distance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:text="@string/result_distance"
        android:layout_marginLeft="10dp"
        android:paddingTop="14dp"
        />



    <ImageView
        android:id="@+id/result_buddy_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/result_buddy_image_description"

        />


</LinearLayout>